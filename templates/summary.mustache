{{!
    @template mod_gquiz/summary

    Displays gquiz summary

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "completedcount" : 15,
        "itemscount" : 5,
        "timeopen" : "May 15, 2016"
    }

}}

<div class="gquiz_info">
    <span
        class="gquiz_info">{{#str}}completed_gquizs, mod_gquiz{{/str}}: </span><span
        class="gquiz_info_value">{{completedcount}}</span>
</div>

<div class="gquiz_info">
    <span
        class="gquiz_info">{{#str}}questions, mod_gquiz{{/str}}: </span><span
        class="gquiz_info_value">{{itemscount}}</span>
</div>

{{#timeopen}}
    <div class="gquiz_info">
        <span
            class="gquiz_info">{{#str}}gquizopen, mod_gquiz{{/str}}: </span><span
            class="gquiz_info_value">{{timeopen}}</span>
    </div>
{{/timeopen}}

{{#timeclose}}
    <div class="gquiz_info">
        <span
            class="gquiz_info">{{#str}}gquizclose, mod_gquiz{{/str}}: </span><span
            class="gquiz_info_value">{{timeclose}}</span>
    </div>
{{/timeclose}}

